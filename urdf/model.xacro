<?xml version="1.0"?>
<robot name="" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <!-- <xacro:property name="" value=""/> -->

    <xacro:include filename="$(find simulation)/urdf/materials.xacro" />
    <xacro:include filename="$(find simulation)/urdf/model.gazebo" />

    <link name="base_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="1" />
            <inertia
                ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0"
                izz="1.0" />
        </inertial>
        <visual>
            <origin xyz="0.14 -0.028 0.14" rpy="0 -3.14159265 -1.57079632" />
            <geometry>
                <mesh filename="package://simulation/meshes/base.STL" />
            </geometry>
            <material name="">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.14 -0.028 0.14" rpy="0 -3.14159265 -1.57079632" />
            <geometry>
                <mesh filename="package://simulation/meshes/base.STL" />
            </geometry>
        </collision>
  </link>

  <link name="left_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0 0 0" />
            <mass value="0.05" />
            <inertia
                ixx="1.0" ixy="0.0" ixz="0.0"
                iyy="1.0" iyz="0.0"
                izz="1.0" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://simulation/meshes/link_l.STL" />
            </geometry>
            <material name="">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://simulation/meshes/link_l.STL" />
            </geometry>
        </collision>
  </link>

    <joint name="joint_l" type="continuous">
        <origin xyz="0.0 0.06 0.026" rpy="0.0 0.0 3.14159265" />
        <parent link="base_link" />
        <child link="left_wheel" />
        <axis xyz="0 1 0" />
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>
  
    <link name="right_wheel">
        <inertial>
            <origin xyz="0.0 0.0 0" rpy="0.0 0.0 0.0" />
            <mass value="0.05" />
            <inertia
                    ixx="1.0" ixy="0.0" ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://simulation/meshes/link_r.STL" />
            </geometry>
            <material name="">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://simulation/meshes/link_r.STL" />
            </geometry>
        </collision>
    </link>

    <joint name="joint_r" type="continuous">
        <origin xyz="0.0 -0.06 0.026" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="right_wheel" />
        <axis xyz="0 1 0" />
        <limit effort="10000" velocity="1000"/>
        <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <link name="camera">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <mass value="0.5" />
            <inertia
                    ixx="1.0" ixy="0.0" ixz="0.0"
                    iyy="1.0" iyz="0.0"
                    izz="1.0" />
        </inertial>
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://simulation/meshes/link_cam.STL" />
            </geometry>
            <material name="">
                <color rgba="1.0 1.0 1.0 1.0" />
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
            <geometry>
                <mesh filename="package://simulation/meshes/link_cam.STL" />
            </geometry>
        </collision>
    </link>
  
    <joint name="joint_cam" type="fixed">
        <origin xyz="0.05 0.0 0.1" rpy="0.0 3.14159265 -1.57079632" />
        <parent link="base_link" />
        <child link="camera" />
    </joint>
</robot>
